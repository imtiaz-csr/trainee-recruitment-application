@model IEnumerable<Trainee_Recruitment_Application.Models.Trainee>
@{
    /**/

    /**/

    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-12">
        <h4 class="d-flex justify-content-center">Trainee</h4>
        <hr />
        <div class="d-flex justify-content-center"><img src="https://cse.buet.ac.bd/assets/img/lab_class.jpg" style="width:480px;height:200px" class="d-flex justify-content-center" /></div>

        <hr />

        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create", "Create", "Trainees", new { }, new { @class = "btn btn-success" })
        </div>
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Trainee Id</th>
                    <th>Trainee Name</th>
                    <th>Round</th>
                    <th>Picture</th>
                    <th>Batch</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => t.TraineeId)</td>
                        <td>@Html.DisplayFor(x => t.TraineeName)</td>
                        <td>@Html.DisplayFor(x => t.Round)</td>
                        <td><img class="rounded-circle" width="60" src="/Uploads/@t.Picture" /></td>
                        <td>@Html.DisplayFor(x => t.Batch.BatchName)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Trainees", new { id = t.TraineeId }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", "Trainees", new { id = t.TraineeId }, new { @class = "btn btn-success btn-sm" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>






