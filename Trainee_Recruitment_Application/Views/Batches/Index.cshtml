@model IEnumerable<Trainee_Recruitment_Application.Models.Batch>
@{
    /**/

    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h4 class="d-flex justify-content-center">Batch</h4>
        <hr />
        <div class="d-flex justify-content-center"><img src="https://www.isdb-bisew.org/photos/shares/Meta-Picture/isdb-bisew-11-2019.jpg" style="width:400px;height:225px" class="d-flex justify-content-center" /></div>
        <hr />

        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create", "Create", "Batches", new { }, new { @class = "btn btn-success btn-sm" })
        </div>
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Batch Id</th>
                    <th>Batch Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => b.BatchId)</td>
                        <td>@Html.DisplayFor(x => b.BatchName)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Batches", new { id = b.BatchId }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", "Batches", new { id = b.BatchId }, new { @class = "btn btn-success btn-sm" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>







