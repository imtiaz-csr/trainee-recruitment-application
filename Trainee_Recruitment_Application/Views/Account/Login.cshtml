@model Trainee_Recruitment_Application.ViewModels.AuthModel
@{
    /**/

    /**/

    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    <h4 class="d-flex justify-content-start">Login</h4>

    <hr />
    <div class="d-flex justify-content-start"><img src="https://mhwirth.com/wp-content/uploads/Login.jpg" style="width:400px; height:267px" class="d-flex justify-content-center" /></div>
    <hr />

    @Html.ValidationSummary(true)
    <div class="row mb-2">
        @Html.LabelFor(x => x.UserName, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        
        @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
        </div>
        <div class="col-4">
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            @Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-outline-success" })
        </div>
        <div class="col-10">
            <button type="submit" class="btn btn-success btn-sm">Login</button>
        </div>

    </div>
}
@section scripts {

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


}



